@using GeekPlatform.ViewModels.Gallery
@model GalleryViewModel

<h1>Albumok</h1>
@foreach (GalleryAlbumViewModel album in Model.Albums)
{

    <h3>@album.AlbumName</h3>
    <a asp-controller="Gallery" asp-action="Album" asp-route-id="@album.AlbumId">Go</a>
    <h6>by @album.CreatorName</h6>
}
